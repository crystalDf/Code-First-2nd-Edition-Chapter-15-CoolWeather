<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    android:background="#80000000">

    <TextView
        android:id="@+id/suggestion_text_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/comfort_text"
        android:text="@string/suggestion_label"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/comfort_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/suggestion_text_label"
        app:layout_constraintBottom_toTopOf="@+id/car_wash_text"
        tools:text="comfort_text"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/car_wash_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/comfort_text"
        app:layout_constraintBottom_toTopOf="@+id/sport_text"
        tools:text="car_wash_text"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/sport_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/car_wash_text"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="sport_text"
        android:textColor="#FFFFFF"/>

</android.support.constraint.ConstraintLayout>
